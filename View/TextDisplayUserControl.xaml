<UserControl x:Class="AnalyticsViewer.TextDisplayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnalyticsViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Blue">
            <TextBox Text="{Binding FileText}"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto" FontSize="10"
                     />
        </Border>
    </Grid>
</UserControl>
