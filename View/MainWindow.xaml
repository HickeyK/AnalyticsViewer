<Window x:Class="AnalyticsViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalyticsViewer"
        mc:Ignorable="d"
        Title="YB Requests" Height="700" Width="1100" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TabControl>

            <TabItem Header="By Security">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Cadis Id"
                           Grid.Row="0"
                           Grid.Column="0"/>
                    <TextBox x:Name="CadisIdTextBox"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="200"/>

                    <Label Content="Yieldbook Id"
                           Grid.Row="1"
                           Grid.Column="0"/>
                    <TextBox x:Name="YieldbookIdTextBox"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="200"/>

                    <Button Content="Retrieve"
                            Grid.Row="0"
                            Grid.Column="2"
                            Command="{Binding RetrieveByIdCommand}"
                            CommandParameter="{Binding Text, ElementName=CadisIdTextBox}"/>
                </Grid>

            </TabItem>
            

            <TabItem Header="By Run Date">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Margin="3"
                           Content="Run Date"/>
                    <ComboBox x:Name="RunDateComboBox"
                              Grid.Row="0"
                              Grid.Column="1"
                              Margin="3"
                              MinWidth="300"
                              ItemsSource="{Binding RequestGroups}"
                              SelectedItem="{Binding SelectedRequestGroup, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="130" Text="{Binding RunDate,  StringFormat={x:Static local:Formatter.DateTimeFormat}}" />
                                    <TextBlock Width="130" Text="{Binding ValDate,  StringFormat={x:Static local:Formatter.DateFormat}}" />
                                    <TextBlock  Text="{Binding Slot}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Grid.Row="0"
                            Grid.Column="2"
                            Margin="3"
                            Content="Retrieve"/>


                    <StackPanel Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2">



                        <RadioButton x:Name="IncludePortfolio1CheckBox"
                                     IsChecked="{Binding IncludePortfolio1}"
                                     Content="Portfolio 1"
                                     GroupName="Portfolio"
                                     VerticalAlignment="Center"
                                    Margin ="3"/>
                        <RadioButton x:Name="IncludePortfolio2CheckBox"
                                     Content="Portfolio 2"
                                     GroupName="Portfolio"
                                     VerticalAlignment="Center"
                                     Margin ="3"
                                     IsChecked="{Binding IncludePortfolio2}"/>
                        <RadioButton x:Name="IncludePortfolio3CheckBox"
                                     Content="Portfolio 3"
                                     GroupName="Portfolio"
                                     VerticalAlignment="Center"
                                     Margin ="3"
                                     IsChecked="{Binding IncludePortfolio3}"/>
                        <RadioButton x:Name="IncludePortfolio4CheckBox"
                                     Content="Portfolio 4"
                                     GroupName="Portfolio"
                                     Margin ="3"
                                     VerticalAlignment="Center"
                                     IsChecked="{Binding IncludePortfolio4}"/>

                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <DataGrid Grid.Row="3"
                  Grid.Column="0"
                  ItemsSource="{Binding Requests}"/>

        </Grid>
</Window>
